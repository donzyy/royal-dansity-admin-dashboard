# ================================
# Backend Environment Variables
# ================================
# Copy this file to .env and fill in your actual values

# SERVER CONFIGURATION
NODE_ENV=development
PORT=5001

# DATABASE CONFIGURATION
MONGODB_URI=mongodb://localhost:27017/royaldansity
# For MongoDB Atlas (Production):
# MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/royaldansity

# JWT CONFIGURATION
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS CONFIGURATION
CORS_ORIGIN=http://localhost:5173
# Production: CORS_ORIGIN=https://royaldansityinvestments.com.gh,https://www.royaldansityinvestments.com.gh,https://api.royaldansityinvestments.com.gh

# FRONTEND URL
FRONTEND_URL=http://localhost:5173
# Production: FRONTEND_URL=https://royaldansityinvestments.com.gh

# EMAIL CONFIGURATION
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@royaldansity.com
EMAIL_FROM_NAME=Royal Dansity

# FILE UPLOAD
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SECURITY
BCRYPT_ROUNDS=10

# LOGGING
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API DOCS
API_DOCS_ENABLED=true

# ADMIN
ADMIN_EMAIL=admin@royaldansity.com
ADMIN_PASSWORD=Admin@123
